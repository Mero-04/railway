<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Blog Add</title>
    <link href="/admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .btn-primary {
            background-color: #171f65!important;
            border: none;
        }
        .btn-danger {
            background-color: #770b0b!important;
            border: none;
        }
        .btn-success {
            background-color: #057817!important;
            border: none;
        }
    </style>
</head>

<body class="bg-light">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Işgär goşmak</h3>
                                </div>
                                <div class="card-body">
                                    <form action="/kadr/user-add" method="post" enctype="multipart/form-data">
                                        <div class="form-floating mb-3">
                                           <select name="categoryId" class="form-control" id="">
                                            <option value="0">Saýla</option>
                                                <% categories.forEach(category => { %>
                                                <option value="<%= category.id %>"><%= category.name %></option>
                                                 <% }) %>
                                           </select>
                                            <label for="input">Bölüm: </label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="text" name="surname"
                                                placeholder="Add title" required/>
                                            <label for="input">Familýasy: </label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="text" name="name"
                                                placeholder="Add title" required/>
                                            <label for="input">Ady: </label>
                                        </div>
                                    
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="text" name="ata_name"
                                                placeholder="Add title" required/>
                                            <label for="input">Atasynyň ady: </label>
                                        </div>
                                    
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="date" name="birth"
                                                placeholder="Add title" required/>
                                            <label for="input">Doglan senesi: </label>
                                        </div>
                                    
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="text" name="duty"
                                                placeholder="Add title" required/>
                                            <label for="input">Wezipesi: </label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="text" name="address"
                                                placeholder="Add title" required/>
                                            <label for="input">Salgysy: </label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="number" name="tel_nom"
                                                placeholder="Add title" required/>
                                            <label for="input">Telefon belgisi: </label>
                                        </div>
                                    
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input" type="file" name="user_img"
                                                placeholder="add image" required/>
                                            <label for="input">Suraty: </label>
                                        </div>
                                        <div class="d-flex justify-content-between" style="padding: 0px 75px;">
                                            <button type="submit" class="btn btn-success">Ýatda saklamak</button>
                                            <a href="/kadr/blog" class="btn btn-danger">Yza gitmek</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
</body>

</html>